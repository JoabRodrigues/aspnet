@page
@model CadastrarModel
@{
}

<h2>Cadastrar</h2>

<form>
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" id="Nome" name="Nome" placeholder="Nome" value="@Model.Usuario.Nome"/>
    </div>
    <div class="form-group">
        <label for="Senha">Senha</label>
        <input type="password" class="form-control" id="Senha" name="Senha" placeholder="Senha" value="@Model.Usuario.Senha" />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>